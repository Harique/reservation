{
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "strict": true,
     "paths": {
      "@/*": ["./src/*"]
    },
    "types": ["node"]
  },
  "include": [
    "vite.config.ts",
    "src/models/**/*",
    "vite.*.config.mjs",
    "src/main.ts",
    "src/preload.ts",
    "src/env.d.ts",
    "src/lib/**/*",
    "src/db/**/*"
  ]
}
